<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com_facebook_button_grey_pressed" >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

    </com.facebook.widget.ProfilePictureView>
    
     

     <TextView
         android:id="@+id/NameText"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="12sp"
         android:layout_alignBottom="@+id/profile"
         android:layout_marginBottom="18dp"
         android:layout_marginLeft="17dp"
         android:layout_toRightOf="@+id/profile"
         android:text="@string/abc_action_mode_done"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#222"
         android:textStyle="bold" />

     <CheckBox
         android:id="@+id/tick"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/NameText"
         android:layout_alignBottom="@+id/NameText"
         android:layout_alignParentRight="true"
         android:layout_marginRight="20dp"
         android:button="@drawable/com_facebook_button_check"
        
    />
    
</RelativeLayout>
